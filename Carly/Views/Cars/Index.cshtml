@model IEnumerable<Carly.Models.Car>
@{
    ViewBag.Title = "CarsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cars List</h2>

@Html.ActionLink("New Car", "New", "Cars", null, new { @class = "btn btn-primary btn-large" })

<br />

@if (Model.Count() == 0)
{
    <p>No car available for now</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Car</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@Html.ActionLink(car.Name, "Edit", "Cars", new { id = car.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>

}

