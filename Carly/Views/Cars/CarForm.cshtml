@model Carly.ViewModels.CarFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Car</h2>
@Html.ActionLink("New", "New", "Cars")

@using (Html.BeginForm("Save", "Cars"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Car.Name)
        @Html.TextBoxFor(c => c.Car.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Car.ManufacturerId)
        @Html.DropDownListFor(m => m.Car.ManufacturerId, new SelectList(Model.Manufacturers,"Id", "Name"), "Select Manufacturer", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.Year)
        @Html.TextBoxFor(c => c.Car.Year, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.NumberAvailable)
        @Html.TextBoxFor(c => c.Car.NumberAvailable, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(c => c.Car.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

